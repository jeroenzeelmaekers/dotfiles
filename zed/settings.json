{
  "show_wrap_guides": true,
  "wrap_guides": [80],
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    },
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    }
  },
  "ui_font_family": ".SystemUIFont",
  "ui_font_size": 15,
  "buffer_font_family": "Berkeley Mono",
  "buffer_font_size": 14,
  "buffer_font_weight": 400.0,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "theme": {
    "mode": "system",
    "light": "Melange Light",
    "dark": "Melange Dark"
  },
  "theme_overrides": {
    "Melange Light": {
      "border": "#E1E1E1",
      "title_bar.background": "#F1F1F1",
      "tab_bar.background": "#F1F1F1",
      "panel.background": "#F1F1F1",
      "status_bar.background": "#F1F1F1"
    }
  },
  "project_panel": {
    "hide_gitignore": false,
    "indent_size": 10,
    "indent_guides": {
      "show": "never"
    }
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "gutter": {
    "min_line_number_digits": 0
  }
}
